<section class="h-100 gradient-custom pt-5 pb-5">
  <div class="container  pt-5">
    <div class="pt-5 pb-5">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-10 col-xl-8">
          <div class="card" style="border-radius: 10px;">
            <div class="card-header px-4 py-5 pt-5">
              <h5 class="text-muted mb-0">Thanks for your Order, <span
                  style="color:#ffa020;">{{orderDetails.deliveryDetails.name}}</span><span
                  style="color: #a8729a;"></span>!</h5>
            </div>
            <div class="card-body p-4">
              <div class="d-flex justify-content-between align-items-center mb-4">
                <p class="lead fw-normal mb-0" style="color: #ffa020;">Receipt</p>
                <p class="small text-muted mb-0">Receipt Voucher : {{orderDetails._id}}</p>
              </div>
              {{#each order}}
              <div class="card shadow-0 border mb-4">
                <div class="card-body">
                  <div class="row">
                    <div class="col-md-2">
                      <img src="/uploads/{{this.products.image.[0].image1}}" class="img-fluid" alt="Phone">
                    </div>
                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                      <p class="text-muted mb-0">{{this.products.productName}}</p>
                    </div>
                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                      <p class="text-muted mb-0 small">{{this.products.color}}</p>
                    </div>
                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                      <p class="text-muted mb-0 small">Capacity: 64GB</p>
                    </div>
                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                      <p class="text-muted mb-0 small">x {{this.quantity}}</p>
                    </div>
                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                      <p class="text-muted mb-0 small">${{this.products.price}}</p>
                    </div>
                  </div>
                  <hr class="mb-4" style="background-color: #e0e0e0; opacity: 1;">
                  <div class="row d-flex align-items-center">
                  </div>
                </div>
              </div>

              {{/each}}


              <div class="d-flex justify-content-between pt-2">
                <p class="fw-bold mb-0"><span style="color:#ffa020;">Order Details</span></p>

              </div>

              <div class="d-flex justify-content-between">
                <p class="text-muted mb-0"><span class="fw-bold me-4">Subtotal</span> ${{orderDetails.subtotal}}</p>
              </div>

              <div class="d-flex justify-content-between ">
                <p class="text-muted mb-0"><span class="fw-bold me-4">Coupon Discount</span>
                  {{orderDetails.couponDiscount}}</p>
              </div>
              <div class="d-flex justify-content-between ">
                <p class="text-muted mb-0"><span class="fw-bold me-4">Total After
                    Coupon</span>${{orderDetails.totalAmountWithoutShipping}}</p>
              </div>
              <div class="d-flex justify-content-between ">
                <p class="text-muted mb-0"><span class="fw-bold me-4">Shipping Charge</span>$40</p>
              </div>
              <div class="d-flex justify-content-between ">
                <p class="text-muted mb-0"><span class="fw-bold me-4">Amount
                    Paid</span>${{orderDetails.totalAmountPaid}}</p>
              </div>

            </div>
            <div class="card-footer border-0 px-4 py-5 "
              style="background-color: #ffcd87; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">
              <h5 class="d-flex align-items-center justify-content-end text-white text-uppercase mb-0">Total
                paid: <span class="h2 mb-0 ms-2">${{orderDetails.totalAmountPaid}}</span></h5>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>