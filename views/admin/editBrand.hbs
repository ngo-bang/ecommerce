<div class="container mt-5 col-xl-6">
    <form class="text-center border border-light p-5" action="/admin/editBrand" method="post"
        enctype="multipart/form-data">

        <p class="h4 mb-4">Edit Brand</p>

        <div class="form-row mb-4">
            <div class="col">
                <!--  name -->
                <input type="text" id="defaultRegisterFormFirstName" class="form-control" placeholder="Brand Name"
                    name="brand" value="{{brand.brandName}}">
            </div>
            <div class="col">
                <img src="/uploads/{{brand.logo}}" alt="" class="" style="width: 100px;" id="img4">
                <input type="file" id="defaultRegisterFormFirstName" class="form-control" placeholder="Logo"
                    name="logo">
            </div>
            <input type="text" id="defaultRegisterFormFirstName" class="form-control" name="id" value="{{brand._id}}"
                hidden>

        </div>

        <button class="btn btn-info my-4 " type="submit">Submit</button>
    </form>
</div>