                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>


</div>



<script>

    $(function () {


        $("#formss").validate({
            rules: {
                email: "required",

                password: {
                    required: true,
                    minlength: 4
                },


            },
            messages: {


                password: {
                    required: "Enter password",
                    minlength: "Enter minimum 4 digits"
                },

                email: {
                    required: 'enter Email',
                    email: "The email should be in the format: abc@domain.tld"
                },
            },
            submitHandler: function (form) {
                if ($(form).valid())
                    form.submit();
                return false;
            }
        });
    });
</script>